
<link href="https://fonts.googleapis.com/css?family=Bungee+Hairline|Lobster" rel="stylesheet">

<script src="~/Scripts/clock/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/clock/jquery.countdown.js"></script>

@if (!string.IsNullOrEmpty(ViewBag.Date))
{
    <div id="clock"></div>
    <script>
        $('#clock').countdown('@ViewBag.Date', function (event) {
            var $this = $(this).html(event.strftime(''
                + '<span>%w</span> weeks '
                + '<span>%d</span> days '
                + '<span>%H</span> hr '
                + '<span>%M</span> min '
                + '<span>%S</span> sec'));
        });
    </script>
}
else
{
    <div> You don't have any incomming trip. <br />
        @Html.ActionLink("Let's create one!", "Create", "Trip")
    </div>
}