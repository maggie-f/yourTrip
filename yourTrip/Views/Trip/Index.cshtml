@model IList<yourTrip.Models.TripModels>

@{
    bool isFuture = ViewBag.IsFuture.Equals("1") ? true : false;
    bool disable = Model.Count() == 0;
}

<div class="container body-content ">
    <h2>These are your trips</h2>
    <p>
        @using (Html.BeginForm("Create", "Trip", FormMethod.Post, new { @class = "form-inline" }))
        {
            <div class="form-group">
                @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control", @type = "text", placeholder = "Name your trip" } })
                @Html.Editor("Departure", new { htmlAttributes = new { @class = "form-control", @type = "datetime-local", placeholder = "Pic a date" } })
            </div>
            <button type="submit" class="btn btn-default">Start!</button>
        }
    </p>
    <div>
        @Html.Partial("_Counter")
    </div>
    <div class="row">
        <div class="col-md-12">
            <div>
                @Html.ActionLink("Future", "Index", "Trip", new { future = true }, new { @class = "btn btn-lg btn-trip " })
                @Html.ActionLink("Past", "Index", "Trip", new { future = false }, new { @class = "btn btn-lg btn-default " })
            </div>
            <br />
            <div class="card-columns">
                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {

                        <div class="card text-dark bg-light text-center p-3">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Departure)</p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        @Html.ActionLink(linkText: "See", actionName: "View", controllerName: "Destination", routeValues: new { id = item.Id }, htmlAttributes: null)
                                        | @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </small>
                                </p>
                            </div>
                        </div>

                    }
                }
                else
                {
                    <div class="card-body">
                        <h5 class="card-title">Ups!</h5>
                        <p class="card-text">You don't have any incomming trip.</p>
                        <p class="card-text"><small class="text-muted">@Html.ActionLink("Let's create one!", "Create", "Trip")</small></p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
