@model IList<yourTrip.Models.TripModels>

@{
    bool isFuture = ViewBag.IsFuture.Equals("1") ? true : false;
    bool disable = Model.Count() == 0;
}

<main class="container">
    &nbsp;
    <div class="row">
        <div class="col-md-6">
            <div class="alert alert-secondary" >
                <p class="lead">
                    @using (Html.BeginForm("Create", "Trip", FormMethod.Post, new { @class = "" }))
                    {
                        <div class="form-item">
                            @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Trip Name" } })    
                        </div>
                        <div class="form-item">
                            @Html.Editor("Departure", new { htmlAttributes = new { @class = "form-control", @type = "datetime-local", @placeholder = "Pic a date" } })
                        </div>
                        <button type="submit" class="btn btn-block btn-light-blue">Start!</button>
                    }
                </p>
            </div>
        </div>
        <div class="col-md-6">
            @Html.Partial("_Counter")
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @Html.ActionLink("Incoming trips", "Index", "Trip", new { future = true }, new { @class = " " }) |
            @Html.ActionLink("Past trips", "Index", "Trip", new { future = false }, new { @class = "" })
        </div>
    </div>
    &nbsp;
    <div class="row">
        <div class="col-lg-12">
            <div class="card-deck">
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                { 
                    <a href="#">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Departure.Date)</p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        @Html.ActionLink(linkText: "See", actionName: "View", controllerName: "Destination", routeValues: new { id = item.Id }, htmlAttributes: null)
                                        | @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </small>
                                </p>
                            </div>
                        </div>
                    </a>
                }
            }
            else
            {
                <div class="card-body">
                    <h5 class="card-title">Ups!</h5>
                    <p class="card-text">You don't have any incomming trip.</p>
                    <p class="card-text"><small class="text-muted">@Html.ActionLink("Let's create one!", "Create", "Trip")</small></p>
                </div>
            }
            </div>
        </div>
    </div>
</main>
